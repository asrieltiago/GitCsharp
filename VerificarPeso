using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp10
{
    class Program
    {
        static void Main(string[] args)
        {
            string n, pesado = "";
            double p, Mai = 0;


            Topo(Mai);

            for (int i = 1; i < 6; i++)
            {
                Console.WriteLine("Digite o seu nome: ");
                n = Console.ReadLine();

                Console.WriteLine($"Digite o peso de {n}: ");
                p = Convert.ToDouble(Console.ReadLine());

                if (p > Mai)
                {
                    Mai = p;
                    pesado = n;
                }

                Topo(Mai);
            }

            Topo(Mai);
            Console.WriteLine($"A pessoa mais pesada foi {pesado} com {Mai} quilos.");

            Console.ReadKey();
        }

        public static void Topo(double Mai)
        {          
            Console.Clear();
            Console.WriteLine("DETECTOR DE PESADO");
            Console.WriteLine($"Maior peso at√© agora: {Mai} Kg");
        }
    }
}
